local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Test Window 1", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

-- tab

local Tab = Window:MakeTab({
	Name = "Test Tab 1",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- section

local Section = Tab:AddSection({
	Name = "Test Section 1"
})

-- notify local player

OrionLib:MakeNotification({
	Name = "Test Title 1",
	Content = "Test Notification 1",
	Image = "rbxassetid://4483345998",
	Time = 5
})

-- button

Tab:AddButton({
	Name = "Test Button 1",
	Callback = function()
      		your script here
  	end    
})
